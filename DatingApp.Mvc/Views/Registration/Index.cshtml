@model DatingApp.Dal.Models.Account

<div class="container">
    <div class="form-sign-in-container form-sign-in-container">
        <h2>Регистрация</h2>
        <form method="post">
                    <div class="textbox">
                        <div class="row">
                            <input asp-for="Name" type="text" name="Name" id="name" class="textbox-google" required>
                            <span class="bar"></span>
                            <label class="text-label">Имя</label>
                        </div>
                        <div class="row">
                            <input asp-for=City type="text" name="City" id="city" class="textbox-google" required>
                            <span class="bar"></span>
                            <label class="text-label">Город</label>
                        </div>
                        <div class="row">
                            <input asp-for="Age" type="number" name="Age" id="age" class="textbox-google" required>
                            <span class="bar"></span>
                            <label class="text-label">Возраст</label>
                        </div>
                        <div class="row-10">
                            <div class="row-label"><label for="caption">Описание</label></div>
                            <textarea asp-for="Caption" name="Caption" id="caption" class="textarea-caption" placeholder=""
                              style="margin-left: -30px;">
                            </textarea>
                        </div>
                    </div>           
            <div class="row-10">
                <input asp-action="NextRegStep" type="submit" class="button-Ok-Sign-Up" value="Далее →">
            </div>
            <div>
                <a asp-controller="User" asp-action="Index" class="ref-to-reg">Войти</a>
            </div>
        </form>
    </div>
</div>